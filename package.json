  "author": "Josh King <jking@chambana.net>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jheretic/hubot-signal-service/issues"
  },
  "homepage": "https://github.com/jheretic/hubot-signal-service#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
